{
  "name": "qbittorrent-web-desktop",
  "version": "1.0.0",
  "description": "Desktop app for qBittorrent Web UI — like Transmission Remote GUI",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "convert-icon": "node scripts/convert-icon.js"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "com.qbittorrent.web.desktop",
    "productName": "Qbit Remote GUI",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "icon": "build/icon.ico",
    "files": ["main.js", "bencode.js", "preload.js", "addtorrent-preload.js", "renderer/**/*"],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "fileAssociations": [
      {
        "ext": "torrent",
        "name": "Torrent File",
        "description": "Файл торрента"
      }
    ]
  }
}
